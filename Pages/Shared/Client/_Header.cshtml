<header>
    <div class="container header-container">
        <a href="/trang-chu" class="logo">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none"
                 stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                 class="logo-icon">
                <path d="M4 22h16a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H8a2 2 0 0 0-2 2v16a2 2 0 0 1-2 2Zm0 0a2 2 0 0 1-2-2V9c0-1.1.9-2 2-2h2c1.1 0 2 .9 2 2v13Z" />
                <path d="M8 6h8" />
                <path d="M8 10h8" />
                <path d="M8 14h4" />
            </svg>
            <h1>FUNews</h1>
        </a>
        <nav class="main-nav">
            <ul id="category-menu" class="nav"></ul>
        </nav>
        <div class="header-actions">
            <div class="search-bar">
            <form method="get" action="/tim-kiem">
                <input type="text" name="keyword" id="search-input" placeholder="Tìm bài viết..." />
                <button type="submit" id="search-btn">Tìm kiếm</button>
            </form>
                <button aria-label="Tìm kiếm" id="search-btn">
                    <!-- Search Icon SVG -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18"
                         viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                         stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="11" cy="11" r="8" />
                        <line x1="21" y1="21" x2="16.65" y2="16.65" />
                    </svg>
                </button>
            </div>

            <div class="notification-area">
                <button id="notification-bell" aria-label="Thông báo">
                    <!-- Bell Icon SVG -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                         stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9" />
                        <path d="M13.73 21a2 2 0 0 1-3.46 0" />
                    </svg>
                    <span class="notification-dot" style="display: none;"></span>
                </button>
                <div id="notification-dropdown" class="notification-dropdown">
                    <div class="notification-header">Thông báo</div>
                    <ul class="notification-list">
                        <li><a href="#">Bài viết mới: "Công nghệ AI..."</a><span>2 phút trước</span></li>
                        <li><a href="#">Bình luận mới về bài viết của bạn</a><span>15 phút trước</span></li>
                        <li><a href="#">Ưu đãi đặc biệt từ TinTucHay!</a><span>1 giờ trước</span></li>
                    </ul>
                    <div class="notification-footer"><a href="#">Xem tất cả</a></div>
                </div>
            </div>
            <div class="theme-toggle">
                <button id="theme-toggle-button" aria-label="Chuyển đổi giao diện">
                    <!-- Sun Icon SVG -->
                    <svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                         viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                         stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="5" />
                        <line x1="12" y1="1" x2="12" y2="3" />
                        <line x1="12" y1="21" x2="12" y2="23" />
                        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64" />
                        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78" />
                        <line x1="1" y1="12" x2="3" y2="12" />
                        <line x1="21" y1="12" x2="23" y2="12" />
                        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36" />
                        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22" />
                    </svg>
                    <!-- Moon Icon SVG -->
                    <svg class="moon-icon" style="display:none;" xmlns="http://www.w3.org/2000/svg" width="20"
                         height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                         stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" />
                    </svg>
                </button>
            </div>
            <div id="auth-control"></div>

        </div>
        <button class="mobile-menu-toggle" id="mobile-menu-toggle" aria-label="Mở menu">
            <!-- Menu Icon SVG -->
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                 stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="3" y1="12" x2="21" y2="12" />
                <line x1="3" y1="6" x2="21" y2="6" />
                <line x1="3" y1="18" x2="21" y2="18" />
            </svg>
        </button>
    </div>
</header>
