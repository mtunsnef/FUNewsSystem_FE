    <section class="category-highlight-section" id="kinh-doanh">
        <div class="section-header">
            <h2 class="section-title">Giải trí</h2>
            <a href="/category/26" class="view-all-link">
                Xem tất cả
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                     style="vertical-align: middle; margin-left: 3px;">
                    <line x1="5" y1="12" x2="19" y2="12" />
                    <polyline points="12 5 19 12 12 19" />
                </svg>
            </a>
        </div>
        <div class="articles-grid articles-grid-horizontal"></div>
    </section>
</main>
<script src="~/js/load-newsarticle.js"></script>
<script>
    let currentSlide = 0;
    let totalSlides = 0;

    function startFeaturedCarousel() {
        const carousel = document.querySelector('.featured-carousel');
        const dots = document.querySelectorAll('.dot');
        const slides = document.querySelectorAll('.featured-article');
        totalSlides = slides.length;

        function goToSlide(index) {
            const offset = -index * 100;
            carousel.style.transform = `translateX(${offset}%)`;
            dots.forEach(dot => dot.classList.remove("active"));
            dots[index % 3].classList.add("active");
            currentSlide = index;
        }

        dots.forEach((dot, idx) => {
            dot.addEventListener("click", () => {
                const target = Math.floor((currentSlide / 3)) * 3 + idx;
                if (target < totalSlides) {
                    goToSlide(target);
                }
            });
        });

        setInterval(() => {
            currentSlide = (currentSlide + 1) % totalSlides;
            goToSlide(currentSlide);
        }, 4500);
    }
</script>
